{
    "name": "ASV 20",
    "group": "Energiewerkstatt",
    "category": "Cogenerator",
    "description": "Requires the <b>Modbus</b> (RTU) driver to be installed.",

    "driver": "modbus",
    "devices": [
        {
            "name": "<node>",
            "description": "Energiewerkstatt Modbus RTU connection",
            "address": "<address>",
            "settings": "RTU:SERIAL_ENCODING_RTU:<baudRate>:DATABITS_8:PARITY_NONE:STOPBITS_1:ECHO_FALSE:FLOWCONTROL_NONE:FLOWCONTROL_NONE"
        },
        {
            "name": "_<node>",
            "description": "Energiewerkstatt",
            "driver": "virtual"
        }
    ],

    "options": [
        {
            "id": "address",
            "name": "Address",
            "description": "The physical device address to identify the modbus slave.<br><br><b>Example:</b><ol><li><b>Linux</b>: /dev/ttyS0 or /dev/ttyUSB0</li><li><b>Windows</b>: COM1</li></ol>",
            "type": "text",
            "mandatory": true
        },
        {
            "id": "unitId",
            "name": "Unid ID",
            "description": "The device address of the Modbus slave.<br>The slave device address is assigned form 1 to 247.<br>Address 0 is used as broadcast address.</li></ul>",
            "type": "text",
            "mandatory": true
        },
        {
            "id": "baudRate",
            "name": "Baud rate",
            "description": "The baud rate for the serial communication.",
            "type": "selection",
            "select": [
                { "name": "300", "value": 300 },
                { "name": "1200", "value": 1200 },
                { "name": "2400", "value": 2400 },
                { "name": "4800", "value": 4800 },
                { "name": "9600", "value": 9600 },
                { "name": "19200", "value": 19200 },
                { "name": "38400", "value": 38400 },
                { "name": "57600", "value": 57600 },
                { "name": "115200", "value": 115200 },
                { "name": "230400", "value": 230400 },
                { "name": "460800", "value": 460800 },
                { "name": "921600", "value": 921600 }
            ],
            "default": 9600,
            "mandatory": false
        },
        {
            "id": "refresh",
            "name": "Refresh interval",
            "description": "Defines at which interval the values of the meter device will be read.",
            "type": "selection",
            "select": [
                { "name": "1 second", "value": 1000 },
                { "name": "2 seconds", "value": 2000 },
                { "name": "3 seconds", "value": 3000 },
                { "name": "4 seconds", "value": 4000 },
                { "name": "5 seconds", "value": 5000 },
                { "name": "10 seconds", "value": 10000 },
                { "name": "15 seconds", "value": 15000 },
                { "name": "20 seconds", "value": 20000 },
                { "name": "25 seconds", "value": 25000 },
                { "name": "30 seconds", "value": 30000 },
                { "name": "35 seconds", "value": 35000 },
                { "name": "40 seconds", "value": 40000 },
                { "name": "45 seconds", "value": 45000 },
                { "name": "50 seconds", "value": 50000 },
                { "name": "55 seconds", "value": 55000 },
                { "name": "1 minute",  "value": 60000 },
                { "name": "2 minutes", "value": 120000 },
                { "name": "3 minutes", "value": 180000 },
                { "name": "4 minutes", "value": 240000 },
                { "name": "5 minutes", "value": 300000 },
                { "name": "10 minutes", "value": 600000 },
                { "name": "15 minutes", "value": 900000 }
            ],
            "default": 5000,
            "mandatory": false
        },
        {
            "id": "offset",
            "name": "Refresh offset",
            "description": "Defines the time waited, until the values of the meter device will be read. Necessary for multiple meters on the same line.",
            "type": "selection",
            "select": [
                { "name": "None", "value": 0 },
                { "name": "1 second", "value": 1000 },
                { "name": "2 seconds", "value": 2000 },
                { "name": "3 seconds", "value": 3000 },
                { "name": "4 seconds", "value": 4000 },
                { "name": "5 seconds", "value": 5000 },
                { "name": "10 seconds", "value": 10000 },
                { "name": "15 seconds", "value": 15000 },
                { "name": "20 seconds", "value": 20000 },
                { "name": "25 seconds", "value": 25000 },
                { "name": "30 seconds", "value": 30000 },
                { "name": "35 seconds", "value": 35000 },
                { "name": "40 seconds", "value": 40000 },
                { "name": "45 seconds", "value": 45000 },
                { "name": "50 seconds", "value": 50000 },
                { "name": "55 seconds", "value": 55000 },
                { "name": "1 minute",  "value": 60000 },
                { "name": "2 minutes", "value": 120000 },
                { "name": "3 minutes", "value": 180000 },
                { "name": "4 minutes", "value": 240000 },
                { "name": "5 minutes", "value": 300000 },
                { "name": "10 minutes", "value": 600000 },
                { "name": "15 minutes", "value": 900000 }
            ],
            "default": 0,
            "mandatory": false
        }
    ],

    "items": [
        {
            "id": "state",
            "type": "Text",
            "header": true,
            "select": {
                "2":"Standby",
                "32":"Stopped",
                "64":"Running",
                "128":"Idling",
                "256":"Stopping"
            },
            "input": "<node>*state"
        },
        {
            "id": "power",
            "type": "Text",
            "label": "Generation power",
            "format": "%.1f kW",
            "scale": 0.001,
            "input": "<node>*power*active"
        },
        {
            "id": "power-setpoint",
            "type": "Slider",
            "label": "Setpoint power",
            "format": "%.1f kW",
            "scale": 0.001,
            "max": 20,
            "min": 0,
            "step": 0.5,
            "mapping": {
                "SET": { "channel": "<node>*power*setpoint" }
            },
            "input": "<node>*power*setpoint"
        }
    ],

    "channels": [
        {
            "name": "<node>*exhaust*temp",
            "description": "Exhaust temperature",
            "address": "<unitId>:HOLDING_REGISTERS:40018:INT16",
            "configs": {"samplingInterval": "<refresh>", "samplingTimeOffset": "<offset>", "scalingFactor": 0.1, "valueType": "DOUBLE", "unit": "°C"}
        },
        {
            "name": "<node>*flow*temp*out",
            "description": "Flow outlet temperature",
            "address": "<unitId>:HOLDING_REGISTERS:40025:INT16",
            "configs": {"samplingInterval": "<refresh>", "samplingTimeOffset": "<offset>", "scalingFactor": 0.1, "valueType": "DOUBLE", "unit": "°C"},
            "logging": {"loggingInterval": "<refresh>", "loggingDelayMaximum": 180000, "loggingTolerance": 0.25, "loggingAverage": true, "engine":"SQL",
                "feed": {"name": "Flow outlet temperature", "tag": "<name>"}
            }
        },
        {
            "name": "<node>*flow*temp*in",
            "description": "Flow inlet temperature",
            "address": "<unitId>:HOLDING_REGISTERS:40026:INT16",
            "configs": {"samplingInterval": "<refresh>", "samplingTimeOffset": "<offset>", "scalingFactor": 0.1, "valueType": "DOUBLE", "unit": "°C"},
            "logging": {"loggingInterval": "<refresh>", "loggingDelayMaximum": 180000, "loggingTolerance": 0.25, "loggingAverage": true, "engine":"SQL",
                "feed": {"name": "Flow inlet temperature", "tag": "<name>"}
            }
        },
        {
            "name": "<node>*state",
            "description": "Cogenerator state",
            "address": "<unitId>:HOLDING_REGISTERS:40136:UINT16",
            "configs": {"samplingInterval": "<refresh>", "samplingTimeOffset": "<offset>", "valueType": "INTEGER"},
            "logging": {"loggingInterval": "<refresh>", "loggingDelayMaximum": 180000 }
        },
        {
            "name": "<node>*voltage*l1",
            "description": "Grid voltage L1",
            "address": "<unitId>:HOLDING_REGISTERS:40288:UINT16",
            "configs": {"samplingInterval": "<refresh>", "samplingTimeOffset": "<offset>", "valueType": "INTEGER", "unit": "V"}
        },
        {
            "name": "<node>*voltage*l2",
            "description": "Grid voltage L2",
            "address": "<unitId>:HOLDING_REGISTERS:40289:UINT16",
            "configs": {"samplingInterval": "<refresh>", "samplingTimeOffset": "<offset>", "valueType": "INTEGER", "unit": "V"}
        },
        {
            "name": "<node>*voltage*l3",
            "description": "Grid voltage L3",
            "address": "<unitId>:HOLDING_REGISTERS:40290:UINT16",
            "configs": {"samplingInterval": "<refresh>", "samplingTimeOffset": "<offset>", "valueType": "INTEGER", "unit": "V"}
        },
        {
            "name": "<node>*freq",
            "description": "Grid frequency",
            "address": "<unitId>:HOLDING_REGISTERS:40296:UINT16",
            "configs": {"samplingInterval": "<refresh>", "samplingTimeOffset": "<offset>", "scalingFactor": 0.1, "valueType": "DOUBLE", "unit": "Hz"}
        },
        {
            "name": "<node>*power*active",
            "description": "Active power",
            "address": "<unitId>:HOLDING_REGISTERS:40264:INT16",
            "configs": {"samplingInterval": "<refresh>", "samplingTimeOffset": "<offset>", "scalingFactor": 1000, "valueType": "DOUBLE", "unit": "W"},
            "logging": {"loggingInterval": "<refresh>", "loggingDelayMaximum": 180000, "loggingTolerance": 10, "loggingAverage": true, "engine":"SQL",
                "feed": {"name": "Power active", "tag": "<name>"}
            }
        },
        {
            "name": "<node>*power*reactive",
            "description": "Reactive power",
            "address": "<unitId>:HOLDING_REGISTERS:40269:INT16",
            "configs": {"samplingInterval": "<refresh>", "samplingTimeOffset": "<offset>", "scalingFactor": 1000, "valueType": "DOUBLE", "unit": "W"},
            "logging": {"loggingInterval": "<refresh>", "loggingDelayMaximum": 180000, "loggingTolerance": 10, "loggingAverage": true, "engine":"SQL",
                "feed": {"name": "Power reactive", "tag": "<name>"}
            }
        },
        {
            "name": "<node>*power*setpoint",
            "description": "Setpoint power",
            "address": "<unitId>:HOLDING_REGISTERS:01002:UINT16",
            "configs": {"samplingInterval": "<refresh>", "samplingTimeOffset": "<offset>", "scalingFactor": 1000, "valueType": "DOUBLE", "unit": "W"},
            "logging": {"loggingInterval": "<refresh>", "loggingDelayMaximum": 180000, "engine":"SQL",
                "feed": {"name": "Power setpoint", "tag": "<name>"}
            }
        },
        {
            "name": "<node>*energy*active",
            "description": "Energy active",
            "address": "<unitId>:HOLDING_REGISTERS:43595:UINT32",
            "configs": {"samplingInterval": "<refresh>", "samplingTimeOffset": "<offset>", "valueType": "LONG", "unit": "kWh"},
            "logging": {"loggingInterval": "<refresh>", "loggingDelayMaximum": 180000, "engine":"SQL",
                "feed": {"name": "Energy active", "tag": "<name>"}
            }
        },
        {
            "name": "<node>*power*thermal",
            "description": "Thermal power",
            "device": "_<node>",
            "configs": {"valueType":"DOUBLE", "unit": "W"}
        },
        {
            "name": "<node>*energy*thermal",
            "description": "Thermal energy",
            "device": "_<node>",
            "configs": {"valueType":"DOUBLE", "unit": "kWh"}
        }
    ],

    "feeds": [
        {
            "name": "Flow outlet temperature",
            "tag": "<name>",
            "engine": "Engine::MYSQL",
            "table": "<node>*flow*temp*out",
            "unit": "°C"
        },
        {
            "name": "Flow inlet temperature",
            "tag": "<name>",
            "engine": "Engine::MYSQL",
            "table": "<node>*flow*temp*in",
            "unit": "°C"
        },
        {
            "name": "Power active",
            "tag": "<name>",
            "engine": "Engine::MYSQL",
            "table": "<node>*power*active",
            "unit": "W"
        },
        {
            "name": "Power reactive",
            "tag": "<name>",
            "engine": "Engine::MYSQL",
            "table": "<node>*power*reactive",
            "unit": "W"
        },
        {
            "name": "Power setpoint",
            "tag": "<name>",
            "engine": "Engine::MYSQL",
            "table": "<node>*power*setpoint",
            "unit": "W"
        },
        {
            "name": "Energy active",
            "tag": "<name>",
            "engine": "Engine::MYSQL",
            "table": "<node>*energy*active",
            "unit": "kWh"
        }
    ]
}