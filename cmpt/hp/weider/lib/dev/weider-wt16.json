        },
        {
            "name": "Circulator pump state",
            "tag": "<name> heating water",
            "engine": "Engine::MYSQL",
            "table": "<node>*water*ht*pump*state"
        },
        {
            "name": "Buffer temperature",
            "tag": "<name> heating water",
            "engine": "Engine::MYSQL",
            "table": "<node>*water*ht*temp",
            "unit": "°C"
        },
        {
            "name": "Setpoint temperature",
            "tag": "<name> heating water",
            "engine": "Engine::MYSQL",
            "table": "<node>*water*ht*temp*setpoint",
            "unit": "°C"
        }
    ]
}