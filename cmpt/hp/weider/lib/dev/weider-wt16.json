{
    "name": "WT16",
    "group": "Weider",
    "category": "Heat pump",
    "description": "Requires the <b>Modbus</b> (RTU) driver to be installed.",

    "devices": [
        {
            "name": "<node>",
            "description": "WeiTrona Modbus RTU connection",
            "driver": "modbus",
            "address": "<address>",
            "settings": "RTU:SERIAL_ENCODING_RTU:<baudRate>:DATABITS_8:PARITY_NONE:STOPBITS_2:ECHO_FALSE:FLOWCONTROL_NONE:FLOWCONTROL_NONE"
        },
        {
            "name": "_<node>",
            "description": "WeiTrona",
            "driver": "virtual"
        }
    ],

    "options": [
        {
            "id": "address",
            "name": "Address",
            "description": "The physical device address to identify the modbus slave.<br><br><b>Example:</b><ol><li><b>Linux</b>: /dev/ttyS0 or /dev/ttyUSB0</li><li><b>Windows</b>: COM1</li></ol>",
            "type": "text",
            "mandatory": true
        },
        {
            "id": "unitId",
            "name": "Unid ID",
            "description": "The device address of the Modbus slave.<br>The slave device address is assigned form 1 to 247.<br>Address 0 is used as broadcast address.</li></ul>",
            "type": "text",
            "mandatory": true
        },
        {
            "id": "baudRate",
            "name": "Baud rate",
            "description": "The baud rate for the serial communication.",
            "type": "selection",
            "select": [
                { "name": "300", "value": 300 },
                { "name": "1200", "value": 1200 },
                { "name": "2400", "value": 2400 },
                { "name": "4800", "value": 4800 },
                { "name": "9600", "value": 9600 },
                { "name": "19200", "value": 19200 },
                { "name": "38400", "value": 38400 },
                { "name": "57600", "value": 57600 },
                { "name": "115200", "value": 115200 },
                { "name": "230400", "value": 230400 },
                { "name": "460800", "value": 460800 },
                { "name": "921600", "value": 921600 }
            ],
            "default": 19200,
            "mandatory": false
        },
        {
            "id": "refresh",
            "name": "Refresh interval",
            "description": "Defines at which interval the values of the meter device will be read.",
            "type": "selection",
            "select": [
                { "name": "1 second", "value": 1000 },
                { "name": "2 seconds", "value": 2000 },
                { "name": "3 seconds", "value": 3000 },
                { "name": "4 seconds", "value": 4000 },
                { "name": "5 seconds", "value": 5000 },
                { "name": "10 seconds", "value": 10000 },
                { "name": "15 seconds", "value": 15000 },
                { "name": "20 seconds", "value": 20000 },
                { "name": "25 seconds", "value": 25000 },
                { "name": "30 seconds", "value": 30000 },
                { "name": "35 seconds", "value": 35000 },
                { "name": "40 seconds", "value": 40000 },
                { "name": "45 seconds", "value": 45000 },
                { "name": "50 seconds", "value": 50000 },
                { "name": "55 seconds", "value": 55000 },
                { "name": "1 minute",  "value": 60000 },
                { "name": "2 minutes", "value": 120000 },
                { "name": "3 minutes", "value": 180000 },
                { "name": "4 minutes", "value": 240000 },
                { "name": "5 minutes", "value": 300000 },
                { "name": "10 minutes", "value": 600000 },
                { "name": "15 minutes", "value": 900000 }
            ],
            "default": 5000,
            "mandatory": false
        },
        {
            "id": "offset",
            "name": "Refresh offset",
            "description": "Defines the time waited, until the values of the meter device will be read. Necessary for multiple meters on the same line.",
            "type": "selection",
            "select": [
                { "name": "None", "value": 0 },
                { "name": "1 second", "value": 1000 },
                { "name": "2 seconds", "value": 2000 },
                { "name": "3 seconds", "value": 3000 },
                { "name": "4 seconds", "value": 4000 },
                { "name": "5 seconds", "value": 5000 },
                { "name": "10 seconds", "value": 10000 },
                { "name": "15 seconds", "value": 15000 },
                { "name": "20 seconds", "value": 20000 },
                { "name": "25 seconds", "value": 25000 },
                { "name": "30 seconds", "value": 30000 },
                { "name": "35 seconds", "value": 35000 },
                { "name": "40 seconds", "value": 40000 },
                { "name": "45 seconds", "value": 45000 },
                { "name": "50 seconds", "value": 50000 },
                { "name": "55 seconds", "value": 55000 },
                { "name": "1 minute",  "value": 60000 },
                { "name": "2 minutes", "value": 120000 },
                { "name": "3 minutes", "value": 180000 },
                { "name": "4 minutes", "value": 240000 },
                { "name": "5 minutes", "value": 300000 },
                { "name": "10 minutes", "value": 600000 },
                { "name": "15 minutes", "value": 900000 }
            ],
            "default": 0,
            "mandatory": false
        }
    ],

    "items": [
        {
            "id": "state",
            "type": "Text",
            "label": "Compressor state",
            "header": true,
            "select": {
                "0":"Standby",
                "1":"Heating"
            },
            "input": "<node>*state"
        },
        {
            "id": "ext-temp",
            "type": "Text",
            "label": "Outside temperature",
            "format": "%.1f °C",
            "input": "<node>*ext*temp"
        },
        {
            "id": "domestic-temp",
            "type": "Text",
            "label": "Domestic water temperature",
            "format": "%.1f °C",
            "input": "<node>*water*dom*temp"
        },
        {
            "id": "water-dom-setpoint",
            "type": "Slider",
            "label": "Domestic setpoint temperature",
            "format": "%.1f °C",
            "max": 55,
            "min": 41,
            "step": 0.5,
            "mapping": {
                "SET": { "channel": "<node>*water*dom*temp*setpoint" }
            },
            "input": "<node>*water*dom*temp*setpoint"
        },
        {
            "id": "water-ht-temp",
            "type": "Text",
            "label": "Heating water temperature",
            "format": "%.1f °C",
            "input": "<node>*water*ht*temp"
        },
        {
            "id": "water-ht-setpoint",
            "type": "Slider",
            "label": "Heating setpoint temperature",
            "format": "%.1f °C",
            "max": 55,
            "min": 21,
            "step": 0.5,
            "mapping": {
                "SET": { "channel": "<node>*water*ht*temp*setpoint" }
            },
            "input": "<node>*water*ht*temp*setpoint"
        }
    ],

    "channels": [
        {
            "name": "<node>*mode*season",
            "description": "Season mode",
            "address": "<unitId>:HOLDING_REGISTERS:454:INT16",
            "configs": {"samplingInterval": "<refresh>", "samplingTimeOffset": "<offset>", "valueType": "INTEGER"}
        },
        {
            "name": "<node>*ext*temp",
            "description": "External temperature",
            "address": "<unitId>:HOLDING_REGISTERS:15:INT16",
            "configs": {"samplingInterval": "<refresh>", "samplingTimeOffset": "<offset>", "scalingFactor": 0.1, "valueType": "DOUBLE", "unit": "°C"},
            "logging": {"loggingInterval": "<refresh>", "loggingDelayMaximum": 900000, "loggingTolerance": 0.25, "loggingAverage": true, "engine":"SQL",
                "feed": {"name": "External temperature", "tag": "<name>"}
            }
        },
        {
            "name": "<node>*flow*energy",
            "description": "Flow energy",
            "device": "_<node>",
            "configs": {"valueType":"DOUBLE", "unit": "kWh"}
        },
        {
            "name": "<node>*flow*power",
            "description": "Flow power",
            "device": "_<node>",
            "configs": {"valueType":"DOUBLE", "unit": "W"},
            "logging": {"loggingInterval": "<refresh>", "loggingMaxInterval": 180000, "loggingTolerance": 10, "loggingAverage": true, "engine":"SQL",
                "feed": {"name": "Power", "tag": "<name>"}
            }
        },
        {
            "name": "<node>*flow*volume",
            "description": "Flow volume",
            "address": "<unitId>:HOLDING_REGISTERS:44:INT16",
            "configs": {"samplingInterval": "<refresh>", "samplingTimeOffset": "<offset>", "valueType": "DOUBLE", "unit": "lh"}
        },
        {
            "name": "<node>*flow*temp*out",
            "description": "Flow outlet temperature",
            "address": "<unitId>:HOLDING_REGISTERS:25:INT16",
            "configs": {"samplingInterval": "<refresh>", "samplingTimeOffset": "<offset>", "scalingFactor": 0.1, "valueType": "DOUBLE", "unit": "°C"},
            "logging": {"loggingInterval": "<refresh>", "loggingDelayMaximum": 900000, "loggingTolerance": 0.25, "loggingAverage": true, "engine":"SQL",
                "feed": {"name": "Flow outlet temperature", "tag": "<name>"}
            }
        },
        {
            "name": "<node>*flow*temp*in",
            "description": "Flow inlet temperature",
            "address": "<unitId>:HOLDING_REGISTERS:26:INT16",
            "configs": {"samplingInterval": "<refresh>", "samplingTimeOffset": "<offset>", "scalingFactor": 0.1, "valueType": "DOUBLE", "unit": "°C"},
            "logging": {"loggingInterval": "<refresh>", "loggingDelayMaximum": 900000, "loggingTolerance": 0.25, "loggingAverage": true, "engine":"SQL",
                "feed": {"name": "Flow inlet temperature", "tag": "<name>"}
            }
        },
        {
            "name": "<node>*flow*temp*delta",
            "description": "Flow delta temperature",
            "device": "_<node>",
            "configs": {"valueType":"DOUBLE", "unit": "°C"}
        },
        {
            "name": "<node>*flow*temp*setpoint",
            "description": "Flow setpoint temperature",
            "address": "<unitId>:HOLDING_REGISTERS:726:INT16",
            "configs": {"samplingInterval": "<refresh>", "samplingTimeOffset": "<offset>", "scalingFactor": 0.1, "valueType": "DOUBLE", "unit": "°C"}
        },
        {
            "name": "<node>*state",
            "description": "Compressor state",
            "address": "<unitId>:HOLDING_REGISTERS:679:INT16",
            "configs": {"samplingInterval": "<refresh>", "samplingTimeOffset": "<offset>", "valueType": "BOOLEAN"},
            "logging": {"loggingInterval": "<refresh>", "loggingDelayMaximum": 180000, "engine":"SQL",
                "feed": {"name": "Compressor state", "tag": "<name>"}
            }
        },
        {
            "name": "<node>*water*dom*pump*state",
            "description": "Circulator pump state",
            "address": "<unitId>:HOLDING_REGISTERS:685:INT16",
            "configs": {"samplingInterval": "<refresh>", "samplingTimeOffset": "<offset>", "valueType": "BOOLEAN"},
            "logging": {"loggingInterval": "<refresh>", "loggingDelayMaximum": 180000, "engine":"SQL",
                "feed": {"name": "Circulator pump state", "tag": "<name> domestic water"}
            }
        },
        {
            "name": "<node>*water*dom*temp",
            "description": "Buffer temperature",
            "address": "<unitId>:HOLDING_REGISTERS:2:INT16",
            "configs": {"samplingInterval": "<refresh>", "samplingTimeOffset": "<offset>", "scalingFactor": 0.1, "valueType": "DOUBLE", "unit": "°C"},
            "logging": {"loggingInterval": "<refresh>", "loggingDelayMaximum": 900000, "loggingTolerance": 0.25, "loggingAverage": true, "engine":"SQL",
                "feed": {"name": "Buffer temperature", "tag": "<name> domestic water"}
            }
        },
        {
            "name": "<node>*water*dom*temp*setpoint",
            "description": "Setpoint temperature",
            "address": "<unitId>:HOLDING_REGISTERS:1:INT16",
            "configs": {"samplingInterval": "<refresh>", "samplingTimeOffset": "<offset>", "scalingFactor": 0.1, "valueType": "DOUBLE", "unit": "°C"},
            "logging": {"loggingInterval": "<refresh>", "loggingDelayMaximum": 180000, "engine":"SQL",
                "feed": {"name": "Setpoint temperature", "tag": "<name> domestic water"}
            }
        },
        {
            "name": "<node>*water*dom*temp*hyst",
            "description": "Buffer temperature hysteresis",
            "address": "<unitId>:HOLDING_REGISTERS:4:INT16",
            "configs": {"samplingInterval": "<refresh>", "samplingTimeOffset": "<offset>", "scalingFactor": 0.1, "valueType": "DOUBLE", "unit": "°C"}
        },
        {
            "name": "<node>*water*dom*lock",
            "description": "Lock",
            "address": "<unitId>:HOLDING_REGISTERS:4082:INT16",
            "configs": {"samplingInterval": "<refresh>", "samplingTimeOffset": "<offset>", "valueType": "BOOLEAN"}
        },
        {
            "name": "<node>*water*ht*pump*state",
            "description": "Circulator pump state",
            "address": "<unitId>:HOLDING_REGISTERS:680:INT16",
            "configs": {"samplingInterval": "<refresh>", "samplingTimeOffset": "<offset>", "valueType": "BOOLEAN"},
            "logging": {"loggingInterval": "<refresh>", "loggingDelayMaximum": 180000, "engine":"SQL",
                "feed": {"name": "Circulator pump state", "tag": "<name> heating water"}
            }
        },
        {
            "name": "<node>*water*ht*temp",
            "description": "Buffer temperature",
            "address": "<unitId>:HOLDING_REGISTERS:16:INT16",
            "configs": {"samplingInterval": "<refresh>", "samplingTimeOffset": "<offset>", "scalingFactor": 0.1, "valueType": "DOUBLE", "unit": "°C"},
            "logging": {"loggingInterval": "<refresh>", "loggingDelayMaximum": 900000, "loggingTolerance": 0.25, "loggingAverage": true, "engine":"SQL",
                "feed": {"name": "Buffer temperature", "tag": "<name> heating water"}
            }
        },
        {
            "name": "<node>*water*ht*temp*setpoint",
            "description": "Setpoint temperature",
            "address": "<unitId>:HOLDING_REGISTERS:4113:INT16",
            "configs": {"samplingInterval": "<refresh>", "samplingTimeOffset": "<offset>", "scalingFactor": 0.1, "valueType": "DOUBLE", "unit": "°C"},
            "logging": {"loggingInterval": "<refresh>", "loggingDelayMaximum": 180000, "engine":"SQL",
                "feed": {"name": "Setpoint temperature", "tag": "<name> heating water"}
            }
        },
        {
            "name": "<node>*water*ht*temp*hyst",
            "description": "Buffer temperature hysteresis",
            "address": "<unitId>:HOLDING_REGISTERS:461:INT16",
            "configs": {"samplingInterval": "<refresh>", "samplingTimeOffset": "<offset>", "scalingFactor": 0.1, "valueType": "DOUBLE", "unit": "°C"}
        }
    ],

    "feeds": [
        {
            "name": "External temperature",
            "tag": "<name>",
            "engine": "Engine::MYSQL",
            "table": "<node>*ext*temp",
            "unit": "°C"
        },
        {
            "name": "Flow inlet temperature",
            "tag": "<name>",
            "engine": "Engine::MYSQL",
            "table": "<node>*flow*temp*in",
            "unit": "°C"
        },
        {
            "name": "Flow outlet temperature",
            "tag": "<name>",
            "engine": "Engine::MYSQL",
            "table": "<node>*flow*temp*out",
            "unit": "°C"
        },
        {
            "name": "Power thermal",
            "tag": "<name>",
            "engine": "Engine::MYSQL",
            "table": "<node>*flow*power",
            "unit": "W"
        },
        {
            "name": "Compressor state",
            "tag": "<name>",
            "engine": "Engine::MYSQL",
            "table": "<node>*state"
        },
        {
            "name": "Circulator pump state",
            "tag": "<name> domestic water",
            "engine": "Engine::MYSQL",
            "table": "<node>*water*dom*pump*state"
        },
        {
            "name": "Buffer temperature",
            "tag": "<name> domestic water",
            "engine": "Engine::MYSQL",
            "table": "<node>*water*dom*temp",
