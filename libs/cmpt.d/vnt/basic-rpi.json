{
    "name": "Basic",
    "group": "General",
    "category": "Ventilation",
    "description": "The control configurations of TH-E EMS",

    "devices": [
        {
            "name": "vnt",
            "description": "Ventilation",
            "driver": "rpi-gpio",
            "address": "pin:<pin>",
            "settings": "mode:DIGITAL_OUTPUT"
        }
    ],

    "scan": {
        "settings": "mode:DIGITAL_OUTPUT"
    },

    "options": [
        {
            "id": "pin",
            "name": "Pin",
            "description": "The Pin number, according to the <a href='https://pi4j.com/1.4/pin-numbering-scheme.html'>WiringPi Pin Numbering Scheme</a>",
            "type": "text",
            "scan": true,
            "mandatory": true
        }
    ],

    "items": [
        {
            "id": "enable",
            "type": "Switch",
            "label": "Enable",
            "header": true,
            "left": "Off",
            "right": "On",
            "mapping": {
                "ON": { "channel": "vnt*state", "value": true },
                "OFF": { "channel": "vnt*state", "value": false }
            },
            "input": "vnt*state"
        }
    ],

    "channels": [
        {
            "name": "vnt*state",
            "description": "Ventilation control",
            "device": "vnt",
            "configs": {"samplingInterval": 5000, "valueType":"BOOLEAN"},
            "logging": {"loggingInterval": 5000, "loggingMaxInterval": 60000, "engine":"SQL",
                "feed": {"name": "State", "tag": "Ventilation"}
            }
        }
    ],

    "feeds": [
        {
            "name": "Ventilation",
            "tag": "State",
            "type": "DataType::REALTIME",
            "engine": "Engine::MYSQL",
            "table": "vnt*state"
        }
    ]
}
