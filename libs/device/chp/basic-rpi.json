{
    "name": "GPIO (Raspberry Pi)",
    "group": "General",
    "category": "Cogenerator",
    "description": "Basic domestic internal combustion engine cogenerator",

    "devices": [
        {
            "name": "chp",
            "description": "Cogenerator",
            "driver": "virtual"
        },
        {
            "name": "chp*ctrl",
            "description": "Cogenerator control",
            "driver": "rpi-gpio",
            "address": "pin:<pin>",
            "settings": "mode:DIGITAL_OUTPUT,defaultState:false"
        }
    ],

    "scan": {
        "settings": "mode:DIGITAL_OUTPUT"
    },

    "options": [
        {
            "id": "pin",
            "name": "Pin",
            "description": "The Pin number, according to the <a href='http://pi4j.com/pin-numbering-scheme.html'>WiringPi Pin Numbering Scheme</a>",
            "type": "text",
            "scan": true,
            "mandatory": true,
            "syntax": "deviceAddress"
        }
    ],

    "items": [
        {
            "id": "enable",
            "type": "Switch",
            "label": "Enable",
            "header": true,
            "left": "Off",
            "right": "On",
            "mapping": {
                "ON": { "channel": "chp*state", "value": true },
                "OFF": { "channel": "chp*state", "value": false }
            },
            "input": "chp*state"
        },
        {
            "id": "temperature",
            "type": "Text",
            "label": "Flow",
            "format": "%.1f Â°C",
            "input": "chp*circ*in*temp",
            "node": "chp*circ*in"
        },
        {
            "id": "power",
            "type": "Text",
            "format": "%.1f kW",
            "scale": 0.001,
            "input": "chp*circ*flow*power",
            "node": "chp*circ"
        },
        {
            "id": "circulation",
            "type": "Switch",
            "left": "Off",
            "right": "On",
            "mapping": {
                "ON": { "channel": "chp*circ*pump*state", "value": true },
                "OFF": { "channel": "chp*circ*pump*state", "value": false }
            },
            "input": "chp*circ*pump*state",
            "node": "chp*circ*pump"
        }
    ],

    "channels": [
        {
            "name": "chp*state",
            "description": "Heat pump state",
            "device": "chp",
            "configs": {"samplingInterval": 5000, "valueType":"BOOLEAN"},
            "logging": {"loggingInterval": 5000, "loggingMaxInterval": 60000, "engine":"SQL",
                "feed": {"name": "State", "tag": "Cogenerator"}
            }
        }
    ],

    "feeds": [
        {
            "name": "State",
            "tag": "Cogenerator",
            "type": "DataType::REALTIME",
            "engine": "Engine::MYSQL",
            "table": "chp*state"
        }
    ]
}
