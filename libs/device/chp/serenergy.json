{
    "name": "H3 3000/5000",
    "group": "Serenergy",
    "category": "Cogenerator",
    "description": "Serenergy Methanol fuel cell system",

    "devices": [
        {
            "name": "chp*ctrl",
            "description": "Fuel cell control",
            "driver": "virtual"
        },
        {
            "name": "chp",
            "description": "Fuel cell",
            "driver": "snmp",
            "address": "<ip>/<port>",
            "settings": "SNMP_VERSION=V2c:AUTHENTICATIONPASSPHRASE=private"
        }
    ],

    "scan": {
        "settings": "mode:DIGITAL_OUTPUT"
    },

    "options": [
        {
            "id": "ip",
            "name": "IP address",
            "description": "The IP address of the SNMP agent device.",
            "type": "text",
            "mandatory": true
        },
        {
            "id": "port",
            "name": "Port",
            "description": "The address port of the target SNMP agent device.<br>By convention, SNMP agents use the UDP-Port 161, while sending traps to 162.",
            "type": "text",
            "default": "161",
            "mandatory": true
        }
    ],

    "items": [
        {
            "id": "state",
            "type": "Text",
            "label": "State",
            "header": true,
            "select": {
                "1":"Passive",
                "2":"Standby",
                "3":"Preheat",
                "4":"Starting",
                "5":"Limited operation",
                "6":"Operation",
                "7":"Shutdown",
                "8":"Emergency shutdown",
                "9":"Error",
                "10":"Zero load mode"
            },
            "default": "Loading",
            "input": "chp*state"
        },
        {
            "id": "enable",
            "type": "Switch",
            "label": "Enable",
            "header": true,
            "left": "Off",
            "right": "On",
            "mapping": {
                "ON": { "channel": "chp*ctrl*state", "value": true },
                "OFF": { "channel": "chp*ctrl*state", "value": true }
            },
            "input": "chp*ctrl*state"
        },
        {
            "id": "circulation",
            "type": "Switch",
            "label": "Pump",
            "left": "Off",
            "right": "On",
            "mapping": {
                "ON": { "channel": "chp*circ*pump*state", "value": true },
                "OFF": { "channel": "chp*circ*pump*state", "value": false }
            },
            "input": "chp*circ*pump*state",
            "node": "chp*circ*pump"
        },
        {
            "id": "temperature",
            "type": "Text",
            "label": "Stack",
            "format": "%.1f °C",
            "input": "chp*stack*temp"
        },
        {
            "id": "voltage",
            "type": "Text",
            "format": "%.1f V",
            "input": "chp*stack*voltage"
        },
        {
            "id": "current",
            "type": "Slider",
            "format": "%.1f A",
            "max": 72,
            "min": 18,
            "step": 1,
            "mapping": {
                "SET": { "channel": "chp*stack*current*limit" }
            },
            "input": "chp*stack*current*limit"
        }
    ],

    "channels": [
        {
            "name": "chp*state",
            "description": "Fuel cell state",
            "device": "chp",
            "address": "1.3.6.1.4.1.46029.1.1.1.3.1.0",
            "configs": {"samplingInterval": 5000, "valueType":"INTEGER"},
            "logging": {"loggingInterval": 5000, "loggingMaxInterval": 60000}
        },
        {
            "name": "chp*ctrl*state",
            "description": "Fuel cell control state",
            "device": "chp*ctrl",
            "configs": {"samplingInterval": 5000, "valueType":"BOOLEAN"},
            "logging": {"loggingInterval": 5000, "loggingMaxInterval": 60000, "engine":"SQL",
                "feed": {"name": "State", "tag": "Fuel cell"}
            }
        },
        {
            "name": "chp*ctrl*enable",
            "description": "Fuel cell control enable",
            "device": "chp",
            "address": "1.3.6.1.4.1.46029.1.1.1.2.1.0",
            "configs": {"valueType":"INTEGER"}
        },
        {
            "name": "chp*ctrl*start",
            "description": "Fuel cell control start",
            "device": "chp",
            "address": "1.3.6.1.4.1.46029.1.1.1.2.3.0",
            "configs": {"valueType":"INTEGER"}
        },
        {
            "name": "chp*ctrl*stop",
            "description": "Fuel cell control stop",
            "device": "chp",
            "address": "1.3.6.1.4.1.46029.1.1.1.2.4.0",
            "configs": {"valueType":"INTEGER"}
        },
        {
            "name": "chp*stack*current*limit",
            "description": "Fuel cell stack current limit",
            "device": "chp",
            "address": "1.3.6.1.4.1.46029.1.1.1.2.6.0",
            "configs": {"samplingInterval": 5000, "scalingFactor":0.1, "valueType":"INTEGER", "unit": "A"},
            "logging": {"loggingInterval": 5000, "loggingMaxInterval": 60000, "engine":"SQL",
                "feed": {"name": "Current limit", "tag": "Fuel cell stack"}
            }
        },
        {
            "name": "chp*stack*power",
            "description": "Fuel cell stack power",
            "device": "chp",
            "address": "1.3.6.1.4.1.46029.1.1.1.3.9.1.0",
            "configs": {"samplingInterval": 5000, "valueType":"DOUBLE", "unit": "W"},
            "logging": {"loggingInterval": 5000, "loggingMaxInterval": 60000, "loggingTolerance": 10, "average": true, "engine":"SQL",
                "feed": {"name": "Power", "tag": "Fuel cell stack"}
            }
        },
        {
            "name": "chp*stack*voltage",
            "description": "Fuel cell stack voltage",
            "device": "chp",
            "address": "1.3.6.1.4.1.46029.1.1.1.3.9.2.0",
            "configs": {"samplingInterval": 5000, "scalingFactor":0.1, "valueType":"DOUBLE", "unit": "V"},
            "logging": {"loggingInterval": 5000, "loggingMaxInterval": 60000, "loggingTolerance": 0.1, "average": true, "engine":"SQL",
                "feed": {"name": "Voltage", "tag": "Fuel cell stack"}
            }
        },
        {
            "name": "chp*stack*current",
            "description": "Fuel cell stack current",
            "device": "chp",
            "address": "1.3.6.1.4.1.46029.1.1.1.3.9.3.0",
            "configs": {"samplingInterval": 5000, "scalingFactor":0.1, "valueType":"DOUBLE", "unit": "A"},
            "logging": {"loggingInterval": 5000, "loggingMaxInterval": 60000, "loggingTolerance": 0.1, "average": true, "engine":"SQL",
                "feed": {"name": "Current", "tag": "Fuel cell stack"}
            }
        },
        {
            "name": "chp*stack*temp",
            "description": "Fuel cell stack temperature",
            "device": "chp",
            "address": "1.3.6.1.4.1.46029.1.1.1.3.9.4.0",
            "configs": {"samplingInterval": 5000, "scalingFactor":0.1, "valueType":"DOUBLE", "unit": "°C"},
            "logging": {"loggingInterval": 5000, "loggingMaxInterval": 60000, "loggingTolerance": 0.1, "average": true, "engine":"SQL",
                "feed": {"name": "Temperature", "tag": "Fuel cell stack"}
            }
        }
    ],

    "feeds": [
        {
            "name": "State",
            "tag": "Fuel cell",
            "type": "DataType::REALTIME",
            "engine": "Engine::MYSQL",
            "table": "chp*state"
        },
        {
            "name": "Power",
            "tag": "Fuel cell stack",
            "type": "DataType::REALTIME",
            "engine": "Engine::MYSQL",
            "table": "chp*stack*power"
        },
        {
            "name": "Voltage",
            "tag": "Fuel cell stack",
            "type": "DataType::REALTIME",
            "engine": "Engine::MYSQL",
            "table": "chp*stack*voltage"
        },
        {
            "name": "Current",
            "tag": "Fuel cell stack",
            "type": "DataType::REALTIME",
            "engine": "Engine::MYSQL",
            "table": "chp*stack*current"
        },
        {
            "name": "Current limit",
            "tag": "Fuel cell stack",
            "type": "DataType::REALTIME",
            "engine": "Engine::MYSQL",
            "table": "chp*stack*current*limit"
        },
        {
            "name": "Temperature",
            "tag": "Fuel cell stack",
            "type": "DataType::REALTIME",
            "engine": "Engine::MYSQL",
            "table": "chp*stack*temp"
        }
    ]
}
