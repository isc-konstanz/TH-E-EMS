{
    "name": "Basic",
    "category": "Heat pump",
    "group": "General",
    "description": "Basic domestic monoblock hot water heat pump",

    "devices": [
        {
            "name": "hp",
            "description": "Heat pump control",
            "driver": "rpi-gpio",
            "address": "pin:<pin>",
            "settings": "mode:DIGITAL_OUTPUT"
        },
        {
            "name": "hp*circ",
            "description": "Heat pump circulation",
            "driver": "virtual"
        }
    ],

    "scan": {
        "settings": "mode:DIGITAL_OUTPUT"
    },

    "options": [
        {
            "id": "pin",
            "name": "Pin",
            "description": "The Pin number, according to the <a href='http://pi4j.com/pin-numbering-scheme.html'>WiringPi Pin Numbering Scheme</a>",
            "type": "text",
            "scan": true,
            "mandatory": true,
            "syntax": "deviceAddress"
        }
    ],

    "items": [
        {
            "id": "enable",
            "type": "Switch",
            "label": "Enable",
            "header": true,
            "left": "Off",
            "right": "On",
            "mapping": {
                "ON": { "channel": "hp*state", "value": true },
                "OFF": { "channel": "hp*state", "value": false }
            },
            "input": "hp*state"
        }
    ],

    "channels": [
        {
            "name": "hp*state",
            "description": "Heat pump state",
            "device": "hp",
            "logging": {"loggingInterval": 5000, "loggingMaxInterval": 60000},
            "configs": {"samplingInterval": 5000, "valueType":"BOOLEAN"},
            "processList": [
                {
                    "process": "log_to_feed",
                    "arguments": {"type": "ProcessArg::FEEDID", "value": "Heat pump", "tag": "State"}
                }
            ]
        },
        {
            "name": "hp*circ*delta*temp",
            "description": "Heat pump circulation temperature",
            "device": "hp*circ",
            "logging": {"loggingInterval": 15000, "loggingMaxInterval": 900000, "loggingTolerance": 0.25, "average": true},
            "configs": {"valueType":"DOUBLE", "unit": "Â°C"}
        },
        {
            "name": "hp*circ*flow*energy",
            "description": "Heat pump circulation energy",
            "device": "hp*circ",
            "logging": {"loggingInterval": 15000, "loggingMaxInterval": 900000},
            "configs": {"valueType":"DOUBLE", "unit": "kWh"},
            "processList": [
                {
                    "process": "counter_accumulator",
                    "arguments": {"type": "ProcessArg::FEEDID", "value": "Heat pump flow", "tag": "Energy"}
                },
                {
                    "process": "kwh_to_power",
                    "arguments": {"type": "ProcessArg::FEEDID", "value": "Heat pump flow", "tag": "Power"}
                }
            ]
        }
    ],

    "feeds": [
        {
            "name": "Heat pump",
            "tag": "State",
            "type": "DataType::REALTIME",
            "engine": "Engine::PHPTIMESERIES"
        },
        {
            "name": "Heat pump flow",
            "tag": "Energy",
            "type": "DataType::REALTIME",
            "engine": "Engine::PHPTIMESERIES"
        },
        {
            "name": "Heat pump flow",
            "tag": "Power",
            "type": "DataType::REALTIME",
            "engine": "Engine::PHPTIMESERIES"
        }
    ]
}
