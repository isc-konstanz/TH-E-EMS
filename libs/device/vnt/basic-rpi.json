{
    "name": "Basic",
    "group": "General",
    "category": "Ventilation",
    "description": "The control configurations of TH-E EMS",

    "devices": [
        {
            "name": "vnt",
            "description": "Ventilation",
            "driver": "rpi-gpio",
            "address": "pin:<pin>",
            "settings": "mode:DIGITAL_OUTPUT"
        }
    ],

    "scan": {
        "settings": "mode:DIGITAL_OUTPUT"
    },

    "options": [
        {
            "id": "pin",
            "name": "Pin",
            "description": "The Pin number, according to the <a href='http://pi4j.com/pin-numbering-scheme.html'>WiringPi Pin Numbering Scheme</a>",
            "type": "text",
            "scan": true,
            "mandatory": true,
            "syntax": "deviceAddress"
        }
    ],

    "items": [
        {
            "id": "enable",
            "type": "Switch",
            "label": "Enable",
            "header": true,
            "left": "Off",
            "right": "On",
            "mapping": {
                "ON": { "channel": "vnt*state", "value": true },
                "OFF": { "channel": "vnt*state", "value": false }
            },
            "input": "vnt*state"
        }
    ],

    "channels": [
        {
            "name": "vnt*state",
            "description": "Ventilation control",
            "device": "vnt",
            "logging": {"loggingInterval": 5000, "loggingMaxInterval": 900000},
            "configs": {"samplingInterval": 5000, "valueType":"BOOLEAN"},
            "processList": [
                {
                    "process": "log_to_feed",
                    "arguments": {"type": "ProcessArg::FEEDID", "value": "Ventilation", "tag": "State"}
                }
            ]
        }
    ],

    "feeds": [
        {
            "name": "Ventilation",
            "tag": "State",
            "type": "DataType::REALTIME",
            "engine": "Engine::PHPFINA",
            "interval": "60"
        }
    ]
}
