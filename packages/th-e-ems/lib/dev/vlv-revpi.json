{
    "name": "Valve (RevPi)",
    "group": "TH-E EMS",
    "category": "Miscellaneous",
    "description": "Basic circulation pump utilities controlled via Revolution Pi DIO Channel",

    "devices": [
        {
            "name": "<device-io>",
            "description": "<name>",
            "driver": "revpi",
            "settings": "mode=DIGITAL_OUTPUT"
        },
        {
            "name": "_<node>",
            "description": "<name>",
            "driver": "virtual"
        }
    ],

    "options": [
        {
            "id": "rotate-cw",
            "name": "Rotate Clockwise",
            "description": "The channel identifier of the digital IO to rotate the valve clockwise",
            "type": "text",
            "mandatory": true
        },
        {
            "id": "rotate-ccw",
            "name": "Rotate Counter Clockwise",
            "description": "The channel identifier of the digital IO to rotate the valve count clockwise",
            "type": "text",
            "mandatory": true
        },
        {
            "id": "device-io",
            "name": "Device ID",
            "description": "The device ID of the IO device",
            "type": "text",
            "default": "<node>",
            "mandatory": false
        },
        {
            "id": "refresh",
            "name": "Refresh interval",
            "description": "Defines at which interval the IOs will be read.",
            "type": "selection",
            "select": [
                { "name": "1 second", "value": 1000 },
                { "name": "2 seconds", "value": 2000 },
                { "name": "3 seconds", "value": 3000 },
                { "name": "4 seconds", "value": 4000 },
                { "name": "5 seconds", "value": 5000 },
                { "name": "10 seconds", "value": 10000 },
                { "name": "15 seconds", "value": 15000 },
                { "name": "20 seconds", "value": 20000 },
                { "name": "25 seconds", "value": 25000 },
                { "name": "30 seconds", "value": 30000 },
                { "name": "35 seconds", "value": 35000 },
                { "name": "40 seconds", "value": 40000 },
                { "name": "45 seconds", "value": 45000 },
                { "name": "50 seconds", "value": 50000 },
                { "name": "55 seconds", "value": 55000 },
                { "name": "1 minute",  "value": 60000 },
                { "name": "2 minutes", "value": 120000 },
                { "name": "3 minutes", "value": 180000 }
            ],
            "default": 1000,
            "mandatory": false
        }
    ],

    "items": [
        {
            "id": "position",
            "type": "Text",
            "label": "Position",
            "header": true,
            "format": "%.1f째",
            "input": "<node>*pos*angle"
        },
        {
            "id": "position-setpoint",
            "type": "Slider",
            "label": "Position setpoint",
            "format": "%.1f째",
            "step": 0.1,
            "min": 0,
            "max": 90,
            "mapping": {
                "SET": { "channel": "<node>*pos*setpoint", "write": false }
            },
            "input": "<node>*pos*setpoint"
        },
        {
            "id": "rotate-cw",
            "type": "Switch",
            "label": "Rotate CW",
            "left": "Off",
            "right": "On",
            "mapping": {
                "ON": { "channel": "<node>*rot*cw", "value": true },
                "OFF": { "channel": "<node>*rot*cw", "value": false }
            },
            "input": "<node>*rot*cw"
        },
        {
            "id": "rotate-ccw",
            "type": "Switch",
            "label": "CCW",
            "left": "Off",
            "right": "On",
            "mapping": {
                "ON": { "channel": "<node>*rot*ccw", "value": true },
                "OFF": { "channel": "<node>*rot*ccw", "value": false }
            },
            "input": "<node>*rot*ccw"
        }
    ],

    "channels": [
        {
            "name": "<node>*rot*cw",
            "description": "<name> rotation CW",
            "device": "<device-io>",
            "address": "<rotate-cw>",
            "configs": {"samplingInterval": "<refresh>", "valueType":"BOOLEAN"},
            "logging": {"loggingInterval": "<refresh>", "loggingDelayMaximum": 180000}
        },
        {
            "name": "<node>*rot*ccw",
            "description": "<name> rotation CCW",
            "device": "<device-io>",
            "address": "<rotate-ccw>",
            "configs": {"samplingInterval": "<refresh>", "valueType":"BOOLEAN"},
            "logging": {"loggingInterval": "<refresh>", "loggingDelayMaximum": 180000}
        },
        {
            "name": "<node>*pos*angle",
            "description": "<name> position angle",
            "device": "_<node>",
            "configs": {"valueType":"FLOAT"},
            "logging": {"loggingInterval": "<refresh>", "loggingDelayMaximum": 180000, "engine":"SQL",
                "feed": {"name": "Position", "tag": "<name>"}
            }
        },
        {
            "name": "<node>*pos*setpoint",
            "description": "<name> position setpoint",
            "device": "_<node>",
            "configs": {"valueType":"FLOAT"},
            "logging": {"loggingInterval": "<refresh>", "loggingDelayMaximum": 180000, "engine":"SQL",
                "feed": {"name": "Position setpoint", "tag": "<name>"}
            }
        }
    ],

    "feeds": [
        {
            "name": "Position",
            "tag": "<name>",
            "engine": "Engine::MYSQL",
            "table": "<node>*pos*angle",
            "unit": "째"
        },
        {
            "name": "Position setpoint",
            "tag": "<name>",
            "engine": "Engine::MYSQL",
            "table": "<node>*pos*angle",
            "unit": "째"
        }
    ]
}
